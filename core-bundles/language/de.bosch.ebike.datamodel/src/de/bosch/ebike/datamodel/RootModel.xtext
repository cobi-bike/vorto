grammar de.bosch.ebike.datamodel.RootModel with org.eclipse.xtext.common.Terminals

generate rootModel "http://www.bosch.de/ebike/datamodel/RootModel"

RootModel:
	//'namespace' namespace = QualifiedName
	('displayname' displayname=STRING)?
	('description' description=STRING)?
	//(references += ModelReference)*
	'root' name=ID  '{'
